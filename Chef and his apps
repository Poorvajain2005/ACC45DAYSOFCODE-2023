#include <stdio.h>

int main(void)
 {

	int t;

	scanf("%d",&t);

	while(t--){

	    int a,b,c,d;

	    scanf("%d %d %d %d",&a,&b,&c,&d);

	    int e = a-b-c;

	    int f = e-d;

	    if(f>=0)

	     printf("0\n");

	    else if( f+b>=0 || f+c>=0 )

	     printf("1\n");

	    else if( f+b+c>=0 )

	     printf("2\n");

	}

	return 0;

}

