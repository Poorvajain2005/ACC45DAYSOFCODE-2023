#include <stdio.h>
int main()
{
    int T, X;
    scanf("%d", &T);
    while (T > 0)
    {
        scanf("%d", &X);
        if (X % 3 == 0)
        {
            printf("0 \n");
        }
        else if (X % 3 == 1)
        {
            printf("2 \n");
        }
        else if (X % 3 == 2)
        {
            printf("1 \n");
        }
        T--;
    }
    return 0;
}
